{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Zippy",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
        },
        {
            "include": "#comments"
        }, 
        {
            "include": "#numbers"
        },
        {
            "include": "#variables"
        },
        {
            "include": "#booleans"
        },
        {
            "include": "#functions"
        },
        {
            "include": "#modules"
        },
        {
            "include": "#module-names"
        },
        {
            "include": "#calls"
        },
        {
            "include": "#variable-names"
        }
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.zippy",
				"match": "\\b(if|else|return|while|await|async|import)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.zippy",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.zippy",
					"match": "\\\\."
				}
			]
        },
        "comments": {
            "name": "comment.line.double-slash.zippy",
            "match": "\/\/[^\n\r]*"
        },
        "numbers": {
            "name": "constant.numeric.zippy",
            "match": "[0-9](.[0-9])*"
        },
        "variables": {
            "name":"variable.language.zippy",
            "match": "\\b(mut|let)\\b"
        },
        "booleans": {
            "name":"constant.language.boolean.zippy",
            "match": "\\b(true|false)\\b"
        },
        "functions": {
            "name": "constant.language.function.zippy",
            "match": "\\bfunc\\b"
        },
        "modules": {
            "name": "constant.language.class.zippy",
            "match": "\\bmodule\\b"
        },
        "module-names": {
            "name": "entity.name.class.zippy",
            "match": "([A-Z][a-z]+)*[A-Z][a-z]*"
        },
        "calls": {
            "name": "support.function.any-method.zippy",
            "match": "\\w+[(]+"
        },
        "variable-names": {
            "name": "variable.name.zippy",
            "match": "\\b\\w+\\b"
        }
	},
	"scopeName": "source.zip"
}
